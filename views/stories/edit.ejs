<%- include('../partials/header') %>

<h2>Edit Your Story: <%=story.title%></h2>

<form action="/stories/<%=story._id%>?_method=PUT" method="POST" >
  <label
    >Rating
    <select name="rating">
      <option disabled selected>--SELECT RATING--</option>
      <option value="General">General</option>
      <option value="Teen">Teen</option>
      <option value="Mature">Mature</option>
      <option value="Explicit">Explicit</option>
    </select>
  </label>

  <label
    >Warning
   <% warningOptions.forEach((warning) => { %>
        <label>
          <input type="checkbox" name="warning" value="<%=warning%>"
          <%if (selectedWarnings && selectedWarnings.includes(warning)) { %>
              checked
         <% } %>
         />
         <%=warning%>
        </label>
   <% }) %>
  </label>

  <label>thumbnail
    <input type="text" name="thumbnail" value="<%=story.thumbnail%>"/>
  </label>

  <label> Summary </label>
  <textarea name="summary"><%=story.summary%></textarea>

  <label>
    Title
    <input type="text" name="title" value="<%=story.title%>"/>
  </label>

  <label> Story </label>
  <textarea id="storytextarea" name="content"><%=story.content%></textarea>
  <button type="submit">Update Story</button>
</form>

<%- include('../partials/footer') %>
